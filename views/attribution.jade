extends layout

block content
  .container
    .row
      .col-12
        h1 Photo Attribution
    .row
      for photo in photos
        .col-xs-12.col-sm-6.col-md-4
          figure.figure
            img.figure-img.img-fluid(src=photo.url alt='')
            figcaption.figure-caption
              .attribution= photo.context.custom.attribution
              .license
                a(href=photo.license_url) #{photo.context.custom.license}
